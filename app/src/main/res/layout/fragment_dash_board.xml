<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="club.veev.babycount.DashBoardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">
        
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/dash_board_category_image_bg"
                    android:layout_width="match_parent"
                    android:layout_height="188dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pic_material_design_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/dash_board_category_text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginStart="16dp"
                    android:text="@string/Category_Category"
                    android:textColor="@color/colorTextPrimaryLight"
                    android:textSize="@dimen/text_size_title"
                    app:layout_constraintBottom_toBottomOf="@+id/dash_board_category_image_bg"
                    app:layout_constraintStart_toStartOf="@+id/dash_board_category_image_bg" />

                <TextView
                    android:id="@+id/dash_board_category_text_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    tools:text="3个分类"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dash_board_category_image_bg" />

                <TextView
                    android:id="@+id/dash_board_category_text_watch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="16dp"
                    android:layout_below="@id/dash_board_category_text_desc"
                    android:text="@string/Common_Watch"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dash_board_category_text_desc"/>

                <TextView
                    android:id="@+id/dash_board_category_text_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_below="@id/dash_board_category_text_desc"
                    android:padding="16dp"
                    android:text="@string/Common_Edit"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/dash_board_category_text_watch"
                    app:layout_constraintStart_toEndOf="@+id/dash_board_category_text_watch"
                    app:layout_constraintTop_toTopOf="@+id/dash_board_category_text_watch" />
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/dash_board_place_image_bg"
                    android:layout_width="match_parent"
                    android:layout_height="188dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pic_material_design_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/dash_board_place_text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginStart="16dp"
                    android:text="@string/Place_Place"
                    android:textColor="@color/colorTextPrimaryLight"
                    android:textSize="@dimen/text_size_title"
                    app:layout_constraintBottom_toBottomOf="@+id/dash_board_place_image_bg"
                    app:layout_constraintStart_toStartOf="@+id/dash_board_place_image_bg" />

                <TextView
                    android:id="@+id/dash_board_place_text_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    tools:text="5个地点"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dash_board_place_image_bg" />

                <TextView
                    android:id="@+id/dash_board_place_text_watch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="16dp"
                    android:layout_below="@id/dash_board_place_text_desc"
                    android:text="@string/Common_Watch"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dash_board_place_text_desc"/>

                <TextView
                    android:id="@+id/dash_board_place_text_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_below="@id/dash_board_place_text_desc"
                    android:padding="16dp"
                    android:text="@string/Common_Edit"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/dash_board_place_text_watch"
                    app:layout_constraintStart_toEndOf="@+id/dash_board_place_text_watch"
                    app:layout_constraintTop_toTopOf="@+id/dash_board_place_text_watch" />
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/dash_board_people_image_bg"
                    android:layout_width="match_parent"
                    android:layout_height="188dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pic_material_design_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/dash_board_people_text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginStart="16dp"
                    android:text="@string/Person_Person"
                    android:textColor="@color/colorTextPrimaryLight"
                    android:textSize="@dimen/text_size_title"
                    app:layout_constraintBottom_toBottomOf="@+id/dash_board_people_image_bg"
                    app:layout_constraintStart_toStartOf="@+id/dash_board_people_image_bg" />

                <TextView
                    android:id="@+id/dash_board_people_text_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    tools:text="7个人"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dash_board_people_image_bg" />

                <TextView
                    android:id="@+id/dash_board_people_text_watch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="16dp"
                    android:layout_below="@id/dash_board_people_text_desc"
                    android:text="@string/Common_Watch"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dash_board_people_text_desc"/>

                <TextView
                    android:id="@+id/dash_board_people_text_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_below="@id/dash_board_people_text_desc"
                    android:padding="16dp"
                    android:text="@string/Common_Edit"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/dash_board_people_text_watch"
                    app:layout_constraintStart_toEndOf="@+id/dash_board_people_text_watch"
                    app:layout_constraintTop_toTopOf="@+id/dash_board_people_text_watch" />
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>
